{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Cultpedia Geography Manifest Schema",
  "description": "JSON Schema for Cultpedia geography dataset manifests",
  "type": "object",
  "properties": {
    "schema_version": {
      "type": "string",
      "pattern": "^reference/\\d+\\.\\d+\\.\\d+$"
    },
    "dataset": {
      "type": "string"
    },
    "type": {
      "type": "string",
      "enum": ["geography"]
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "license": {
      "type": "string"
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    },
    "updated_at": {
      "type": "string",
      "format": "date-time"
    },
    "sources": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "url": { "type": "string", "format": "uri" },
          "license": { "type": "string" }
        },
        "required": ["name", "url"]
      }
    },
    "includes": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": ["countries", "continents", "regions"]
      }
    },
    "assets": {
      "type": "object",
      "properties": {
        "flags-svg": { "type": "string" }
      },
      "additionalProperties": true
    },
    "counts": {
      "type": "object",
      "properties": {
        "countries": { "type": "integer", "minimum": 0 },
        "continents": { "type": "integer", "minimum": 0 },
        "regions": { "type": "integer", "minimum": 0 },
        "flags": { "type": "integer", "minimum": 0 }
      },
      "additionalProperties": false
    },
    "checksums": {
      "type": "object",
      "patternProperties": {
        ".*\\.ndjson$": {
          "type": "string",
          "pattern": "^sha256-[a-f0-9]{64}$"
        }
      },
      "additionalProperties": false
    }
  },
  "required": ["schema_version", "dataset", "type", "version", "license", "created_at", "updated_at", "sources", "includes", "counts", "checksums"],
  "additionalProperties": false
}